<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:background="@drawable/user_shoe"
              android:elevation="1dp"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="5dp"
>

    <com.example.tmnt.newcomputer.Widget.CircleImageView
        android:id="@+id/user_msg_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image"
        android:transitionName="@string/share"
        />


    <TextView
        android:id="@+id/user_msg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#747474"
        android:textSize="24sp"
        tools:text="hahahahahah"
    />


    <TextView
        android:id="@+id/user_msg_header_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="agagagaggaagagag"
    />


</LinearLayout>